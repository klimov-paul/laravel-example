{
    "name": "klimov-paul/laravel-example",
    "type": "project",
    "description": "The Laravel Project Example.",
    "keywords": [
        "laravel",
        "example",
        "training",
        "education"
    ],
    "license": "MIT",
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-json": "*",
        "bensampo/laravel-enum": "^4.1",
        "fruitcake/laravel-cors": "^2.0",
        "guzzlehttp/guzzle": "^7.0.1",
        "laravel/framework": "^8.75",
        "laravel/horizon": "^5.0.0",
        "laravel/sanctum": "^2.11",
        "laravel/telescope": "^4.0.0",
        "laravel/tinker": "^2.5",
        "mad-web/laravel-initializer": "^3.2.0",
        "spatie/laravel-query-builder": "^4.0.2"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.5",
        "barryvdh/laravel-ide-helper": "^2.8.1",
        "brainmaestro/composer-git-hooks": "^2.8.3",
        "facade/ignition": "^2.5",
        "fakerphp/faker": "^1.9.1",
        "friendsofphp/php-cs-fixer": "^2.16.4",
        "mockery/mockery": "^1.4.4",
        "nunomaduro/collision": "^5.10",
        "phpunit/phpunit": "^9.5.10"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@php -r \"file_exists('bootstrap/cache/config.php') && unlink('bootstrap/cache/config.php');\"",
            "@php -r \"file_exists('bootstrap/cache/services.php') && unlink('bootstrap/cache/services.php');\"",
            "@php -r \"file_exists('bootstrap/cache/packages.php') && unlink('bootstrap/cache/packages.php');\"",
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "post-install-cmd": [
            "@php -r \"file_exists('vendor/bin/cghooks') && passthru('vendor/bin/cghooks add --ignore-lock');\""
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force",
            "@php -r \"file_exists('vendor/bin/cghooks') && passthru('vendor/bin/cghooks update');\""
        ],
        "project-install": [
            "@composer install --no-dev",
            "@php artisan app:install"
        ],
        "project-update": [
            "@composer install --no-dev",
            "@php artisan app:update"
        ],
        "fix-cs": [
            "php-cs-fixer --verbose fix"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        },
        "hooks": {
            "commit-msg": "grep -q -P '.+' $1"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
